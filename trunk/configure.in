AC_INIT(tools/smilint.c)
AM_INIT_AUTOMAKE(libsmi,0.1)

AC_DEFINE(BACKEND_SMI)

AC_ARG_WITH(cflags,
[  --with-cflags=FLAGS     use FLAGS for CFLAGS],
CFLAGS="$withval")

AC_ARG_ENABLE(sming,
[  --enable-sming          enable SMIng support],
AC_DEFINE(BACKEND_SMING))

FLEX=flex
BISON=bison

AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_MAKE_SET
AM_PROG_LIBTOOL
AC_SUBST(LIBTOOL_DEPS)

if ${CONFIG_SHELL} ./libtool --features | grep "enable static" >/dev/null; then
  STATIC=-static
else
  STATIC=
fi
AC_SUBST(STATIC)

AC_SUBST(CC)
AC_SUBST(CFLAGS)
AC_SUBST(BISON)
AC_SUBST(FLEX)

AC_OUTPUT(Makefile lib/Makefile tools/Makefile)
