<xsd:schema targetNamespace="http://www.ibr.cs.tu-bs.de/~tklie/smi"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns="http://www.ibr.cs.tu-bs.de/~tklie/smi">
  
  <xsd:simpleType name="Integer32">
    <xsd:restriction base="xsd:int"/>
  </xsd:simpleType>

  <xsd:simpleType name="OctetString">
    <xsd:restriction base="xsd:string">
      <xsd:maxLength value="65535" fixed="false"/> 
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="ObjectIdentifier">
    <xsd:restriction base="xsd:string">
      <xsd:minLength value="2"/>
      <xsd:maxLength value="128"/>
      <xsd:pattern value="[0-2]\
      (.0|\
      [1-9]([0-9]{0,8})|\
      [1-3]([0-9]{9})|\
      4[0-1]([0-9]{8})|\
      42[0-8]([0-9]{7})|\
      429[0-3]([0-9]{6})|\
      4294[0-8]([0-9]{5})|\
      42949[0-5]([0-9]{4})|\
      429496[0-6]([0-9]{3})|\
      4294967[0-1]([0-9]{2})|\
      42949672[0-8][0-9]|\
      429496729[0-5]){1,127}"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="Unsigned32">
    <xsd:restriction base="xsd:unsignedInt"/>
  </xsd:simpleType>

 <xsd:simpleType name="Unsigned64">
    <xsd:restriction base="xsd:unsignedLong"/>
  </xsd:simpleType>

  <xsd:simpleType name="EncAttrType">
    <xsd:restriction base="xsd:NMTOKEN">
      <xsd:enumeration value="ascii"/>
      <xsd:enumeration value="hex"/>
    </xsd:restriction>
  </xsd:simpleType>

</xsd:schema>
